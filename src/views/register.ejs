<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

</head>

<body class="body-register">
    <%- include('partials/header.ejs') %>
    <form method="POST" action="/confirm-register" enctype="multipart/form-data">
        
        <section class="formContainer">
            <% if(locals.errors){
                errors.forEach((err) => {%>
                    <p><%= err.msg %></p>
                <%})%>
            <%}%>
            <h4>Registro</h4>
            <hr>
            <label for="email"><b>Email</b></label>
            <input class="register-input" type="text" placeholder="Ingrese Email" name="email">
            
            <label for="password"><b>Contraseña</b></label>
            <input class="register-input" type="password" placeholder="Ingrese Contraseña" name="password">

            <label for="nombre"><b>Nombre</b></label>
            <input  class="register-input" type="text" name="firstName">

            <label for="apellido"><b>Apellido</b></label>
            <input class="register-input" type="text" name="lastName">

            <label for="direccion"><b>Dirección</b></label>
            <input class="register-input" type="text" placeholder="Ej: Av. Qwerty 1010" name="adress">

            <label for="pais"></label>
            <select name="pais" id="pais">
                <option value="argentina">Argentina</option>
            </select>
            <br>
            <br>
            <div>
                <label for="avatar">Imagen personal</label>
                <input class="register-input" type="file" name="avatar">
            </div>

                <button type="button" class="cancel">Cancelar</button>
                <button type="submit" class="signup">Crear Cuenta</button>
            </div>
        </div>
    </form>

</body>

</html>