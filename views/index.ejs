<!DOCTYPE html>
<html lang="en">
<!-------------- Se incluye head dese la carpeta /views/partils------------------------>
<%- include('partials/head.ejs') %>

<body>

<!-------------- Se incluye el header dese la carpeta /views/partils------------------------>
<%- include('partials/header.ejs') %>

<!------------------------------ MAIN ----------------------------------------------->
    <main>
        <div class="main-carousel">
            <img class="main-image" src="/images/main-image.jpg" alt="">
                <!-- <i class="fa-solid fa-chevron-left"></i>
                <i class="fa-solid fa-chevron-right"></i>
                <i class="fa-solid fa-ellipsis"></i> -->
        </div>

        <div class="destacado">
            <h2>Productos Destacados</h2>
        </div>

        <section class="prod-display">
            <% for(let i=0; i< allProducts.length; i++) {%>
                <% if (allProducts[i].destacado) {%>
                    <div class="card">
                        <img class="card-img" src="<%= allProducts[i].img %>" alt="laptop">
                        <div class="separator">
                            <h3><%= allProducts[i].marca + " " +  allProducts[i].referencia %></h3>
                            <h4>$<%= allProducts[i].precio %></h4>
                            <h5><a href="/products/<%= allProducts[i].id %>"><i class="fa-solid fa-eye"></i> Detalles</a></h5>
                        </div>
                    </div>
                <%}%>
            <%}%>

        </section>

    </main>

<!-------------- FOOTER ----------------------------------------------->

<%- include('partials/footer.ejs') %>

</body>
</html>